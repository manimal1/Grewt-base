{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "src/client"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },

  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.graphql",
    "src/**/*.gql"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,json,graphql",
  "exec": "NODE_ENV=development ts-node src/index.ts"
}
