{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src/server",
        "strict": true,
        "baseUrl": "./src/server",
        "paths": {
            "*": [
                "*",
                "dist/*"
            ],
            "@constants": [
                "/constants",
                "/dist/constants"
            ]
        }
    },
    "include": ["./src/server"],
    "exclude": ["./src/client", "node_modules", "**/*.spec.ts"],
    "files": ["src/server/types.d.ts"],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "exclude": "**/*+(index|.spec).ts",
        "readme": "./README.md",
        "name": "The Avenger App - API docs"
    }
}
